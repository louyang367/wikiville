        <div class="form-group">
          <label for="title">Wiki title</label>
          <input type="text" value="<%= wiki.title %>" class="form-control" name="title" aria-describedby="titleHelp" placeholder="Enter Title" id="title-input" oninput="this.editor.update()">
          <small class="text-muted" id="titleHelp">* title must be 2 or more characters in length.</small>
        </div>
        <div class="form-group">
          <label for="body">Wiki body</label>
          <textarea rows="4" class="form-control" name="body" placeholder="Enter wiki body" id="text-input" oninput="this.editor.update()"><%= wiki.body %></textarea>
          <small class="text-muted" id="bodyHelp" float-left>* body must be 10 or more characters in length.</small>

        <div class="checkbox my-3">
          <% if(authorizer.setPrivate()) { %>
            <label><input type="checkbox" name="private" value="true"> Private</label>
          <% } else { %>
            <label><input type="checkbox" name="private" value="true" disabled> Private</label>
          <% } %>
        </div>

        <button type="submit" class="btn btn-success btn-block mx-auto mb-3" style="width: 200px">Submit</button>

